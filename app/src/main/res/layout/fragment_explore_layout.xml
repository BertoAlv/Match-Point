<?xml version="1.0" encoding="utf-8"?>

<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home_page"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/fondo_inicio"
        android:layout_marginBottom="25dp"/>

    <SearchView
        android:id="@+id/barraBusqueda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:queryHint="Busca un jugador..."
        android:iconifiedByDefault="false"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jugadores cercanos a ti"
        android:textSize="15sp"
        android:fontFamily="@font/abril_fatface"
        android:layout_gravity="center"
        android:layout_marginTop="18dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

    <LinearLayout
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="40dp">

        <ImageView
            android:layout_width="49dp"
            android:layout_height="49dp"
            android:src="@drawable/avatar_anonimo5"/>

        <ImageView
            android:layout_width="48dp"
            android:layout_height="49dp"
            android:src="@drawable/avatar_anonimo"/>

        <ImageView
            android:layout_width="48dp"
            android:layout_height="49dp"
            android:src="@drawable/avatar_anonimo2"/>

        <ImageView
            android:layout_width="48dp"
            android:layout_height="49dp"
            android:src="@drawable/avatar_anonimo4"/>

        <ImageView
            android:layout_width="48dp"
            android:layout_height="49dp"
            android:src="@drawable/avatar_anonimo3"/>

    </LinearLayout>

    <ListView
        android:id="@+id/lvJugadores"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:entries="@array/Rivales"/>

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/recorte_maps3" />

</androidx.appcompat.widget.LinearLayoutCompat>